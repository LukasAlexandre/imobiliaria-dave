generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Produto {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  titulo       String
  descricao    String
  quartos      Int
  banheiros    Int
  garagem      Int
  preco        Float
  metragem     Float
  localizacao  String
  tipo         String
  fotos        String[] // Array de strings para armazenar URLs das fotos
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}