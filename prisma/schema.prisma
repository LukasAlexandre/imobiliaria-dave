model Produto {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  areaConstruida    Int
  areaTerreno       Int
  banheiros         Int       // Alterado para Int, compatível com MongoDB
  conteudoAdicional String
  createdAt         DateTime  @default(now()) // Adicionado valor padrão
  descricao         String
  foto01            String?   // Alterado para String?, caso sejam URLs
  foto02            String?
  foto03            String?
  foto04            String?
  foto05            String?
  foto06            String?
  foto07            String?
  foto08            String?
  foto09            String?
  foto10            String?
  garagem           Int       // Alterado para Int
  localizacao       String
  preco             Float
  quartos           Int       // Alterado para Int
  tipo              String
  titulo            String
}
